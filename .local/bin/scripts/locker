#!/usr/bin/env bash

xidlehook \
  --not-when-fullscreen \
  --not-when-audio \
  --timer 600 \
    'xrandr --output eDP --brightness .5' \
    'xrandr --output eDP --brightness 1' \
  --timer 60 \
    'betterlockscreen -l dim' \
    'xrandr --output eDP --brightness 1' \
  --timer 540 \
    'systemctl suspend' \
    'xrandr --output eDP --brightness 1'
