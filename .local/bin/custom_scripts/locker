#!/usr/bin/env bash

xidlehook \
  --not-when-fullscreen \
  --not-when-audio \
  --timer 300 \
    'xrandr --output eDP --brightness .2' \
    'xrandr --output eDP --brightness 1' \
  --timer 60 \
    'xrandr --output eDP --brightness 1; betterlockscreen -l dim' \
    '' \
  --timer 240 \
    'systemctl suspend' \
    ''
