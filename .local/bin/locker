#!/usr/bin/env bash

xidlehook \
  --not-when-fullscreen \
  --not-when-audio \
  --timer 180 \
    'xrandr --output eDP --brightness .2' \
    'xrandr --output eDP --brightness 1' \
  --timer 60 \
    'xrandr --output eDP --brightness 1; betterlockscreen --off 5 -l dim' \
    '' \
  --timer 360 \
    'systemctl suspend' \
    ''
